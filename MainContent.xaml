<UserControl x:Class="UITest.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UITest" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <ScrollViewer Margin="0,0,25,81"  >
            <Grid Height="341">

                <hc:Divider  Margin="30,315,30,10"/>
                <hc:CheckComboBox x:Name="combox1" HorizontalAlignment="Left" Margin="150,100,0,0" Width="405" VerticalAlignment="Top"
                 Style="{StaticResource CheckComboBoxPlus}" SelectionChanged="CheckComboBox_SelectionChanged"         
                 ShowClearButton="True" 
                          hc:TitleElement.Title="ReleaseVersion" hc:TitleElement.TitlePlacement="Left" hc:TitleElement.TitleWidth="100" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" AllowDrop="True"  ShowSelectAllButton="True" Height="35" 

                          />

                <hc:CheckComboBox x:Name="combox2" HorizontalAlignment="Left" Height="38" Margin="150,177,0,0"  VerticalAlignment="Top" Width="405"
                          Style="{StaticResource CheckComboBoxPlus}"
                      hc:TitleElement.Title="OSVersion"  hc:TitleElement.TitlePlacement="Left" hc:TitleElement.TitleWidth="100" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" AllowDrop="True" ShowSelectAllButton="True" 
                    hc:ShowClearButton="True" MouseEnter="combox2_MouseEnter"
                    />
                <hc:CheckComboBox x:Name="combox3" HorizontalAlignment="Left" Height="35" Margin="150,250,0,0"  VerticalAlignment="Top" Width="405" Style="{StaticResource CheckComboBoxPlus}"
            hc:TitleElement.Title="DriverVersion"  hc:TitleElement.TitlePlacement="Left" hc:TitleElement.TitleWidth="100" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" AllowDrop="True"  ShowSelectAllButton="True"
                    hc:ShowClearButton="True"  MouseEnter="combox3_MouseEnter"
                    />
                <hc:TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="35" Margin="150,25,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="405"
            hc:TitleElement.Title="DriverName"  hc:TitleElement.TitlePlacement="Left" hc:TitleElement.TitleWidth="100" 
                    hc:ShowClearButton="True" hc:InfoElement.Necessary="True" TextChanged="TextBox1_TextChanged"  
                    />
            </Grid>

        </ScrollViewer>


        <Button x:Name="Button1" Style="{StaticResource ButtonInfo}" Content="提交" Margin="615,374,0,0" hc:IconElement.Geometry="{StaticResource WindowRestoreGeometry}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Click="Button_Click" FontSize="14" />
        <hc:LoadingCircle x:Name="Loading1" HorizontalAlignment="Left" Height="30" Margin="705,374,0,0" VerticalAlignment="Top" Width="35"
                    Visibility="Hidden"
                          />
        <CheckBox x:Name="check1" HorizontalAlignment="Left" Margin="523,380,0,0"    Content="生成图表" VerticalAlignment="Top" ClickMode="Release" IsChecked="True" />

    </Grid>
</UserControl>
